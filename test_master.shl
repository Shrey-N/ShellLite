say "=== ShellLite LLVM Master Test ==="

say "[1] Testing System Execute..."
execute "echo Hello from System Command"

say "[2] Testing Loop Control (Skip/Stop)..."
make i be 0
while i < 10:
    make i be i + 1
    if i == 5:
        say "Skipping 5..."
        skip
    
    if i > 8:
        say "Stopping at " + i
        stop
        
    say "Loop: " + i

say "[3] Testing File I/O & Functions..."
to write_and_read filename:str content:str:
    say "Writing to " + filename
    write content to file filename
    make read_back be read(filename)
    return read_back

make result be write_and_read "master.txt" "Master Content"
say "Verified Content: " + result

say "=== Master Test Complete ==="
